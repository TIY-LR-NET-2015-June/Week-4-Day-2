@model List<WebApplication1.Models.Persons>

@{
    ViewBag.Title = "Create";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Persons</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="toBeCopied">
            @Html.Partial("~/Views/People/CreatePerson.cshtml", new WebApplication1.Models.Persons(), new ViewDataDictionary { TemplateInfo = new TemplateInfo { HtmlFieldPrefix = Guid.NewGuid().ToString("N") } });
            @{Html.RenderPartial("~/Views/People/CreatePerson.cshtml");}
        </div>
        <input type="button" value="Add another person" class="copyForm btn btn-default" />
        <script>
            $(document).ready(function () {
                $('.copyForm').click(function () {
                    $('.toBeCopied').first().clone().insertAfter(".toBeCopied");
                });
            });
        </script>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
                }

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
